<h1><%= @title %></h1>
<br />

<div id = "panel-section" class = "round">
<%= form_for(@section) do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label "Type of Section" %><br />
    <%= f.select :typesection, [['Contact'],['Objective'],['Qualifications'],['Education'],['Skills'],['Employment History'],['List of References'],['Other']], :prompt => " " %>
  </div>
  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title , :size => 30 %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content , :width => 60 %>
  </div>
  
  <div class="field">
	<%= f.hidden_field :userid, :value => current_user.id %>
	</div>
  
  <div class="actions">
    <%= f.submit "Create Section", :disable_with => "Submitting..." %>
  </div>
<% end %>
</div>