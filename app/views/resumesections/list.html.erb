
<h1><%= @title %></h1>
<br />

<b><%= link_to "Add Another Section", "/newresume/#{params[:id]}" %></b><br /><br />

<% if !@resumesection.blank? %>
<table>
  <tr>
    <th>ID</th>
    <th>Type of Section</th>
    <th>Section Name</th>
	<th>Order</th>
	<th></th>
  </tr>


<% @resumesection.each do |resumesection| %>
  <tr>
    <td><%= resumesection.id %></td>
	<td><%= resumesection.section.typesection %></td>
	<td><%= resumesection.section.title %></td>
	<td><%= resumesection.ordernum %></td>
	<td><%= link_to 'Edit Order', "/resumesections/#{resumesection.id}/edit" %> | 
	<%= link_to 'Delete', resumesection, :confirm => 'Are you sure?', :method => :delete %></td>
 
  </tr>
<% end %>
</table>

<% else %>

You do not have any sections in your resume.<br /><br />	
<% end %>
<br />
<%= button_to "Finish Creating Resume", "/viewresume/#{params[:id]}" %>
