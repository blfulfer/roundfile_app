<!DOCTYPE html>
<html>
  <head>
    <title><%= @title %></title>
    <%= csrf_meta_tag %>
    <%= render 'layouts/stylesheets' %>
    <%= javascript_include_tag :defaults %>
  </head>
  <body>
      <%= render 'layouts/header' %>
	  
      <div id="wrapper">
	  <div id= "sidebar-wrapper">
		<%= render 'layouts/sidebar' %>
	  </div>
		<div id="page">
		
		<div id="page-bgtop">
		<section class="round">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
		
				<%= yield %>
      </section>
			</div>
		</div>
			
	  </div>
  </body>
  
</html>